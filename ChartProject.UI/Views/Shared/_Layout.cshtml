<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dinamik Chart Uygulaması</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/main.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom JS -->
    <script src="~/js/chart-app.js"></script>

    <script>
        $(document).ready(function () {
            // Tarih ve gün bilgilerini almak için JavaScript kodu
            var days = ['Pazar', 'Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma', 'Cumartesi'];
            var months = ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran', 'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık'];
            var now = new Date();
            var formattedDate = now.getDate() + ' ' + months[now.getMonth()] + ' ' + now.getFullYear() + ' | ' + days[now.getDay()];

            // Tarihi header'a yerleştirin
            $('#current-date').text(formattedDate);
        });
    </script>
</head>
<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg d-flex justify-content-between align-items-center">
        <a class="navbar-brand logo-font text-white" href="/home">Dinamik Chart Uygulaması</a>
        <span id="current-date" class="date-font text-white"></span>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container text-center">
            <span>
                © 2024 Dinamik Chart Uygulaması. Developed by
                <a href="https://www.fatihsevencan.com/" target="_blank">Fatih Sevencan</a>
            </span>
        </div>
    </footer>
</body>
</html>